@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Skill>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yetenekler Tablosu Paneli</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Oran</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SkillId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Value</td>
                                    <td>
                                        <a href="/Skill/SkillDelete/@item.SkillId" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Skill/SkillEdit/@item.SkillId" class="btn btn-outline-success">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <a href="/Skill/SkillAdd" class="btn btn-primary">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
</div>
