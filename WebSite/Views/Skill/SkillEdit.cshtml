@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "SkillEdit";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Düzenleme Paneli</h4>
            @using (Html.BeginForm("SkillEdit", "Skill", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.HiddenFor(x => x.SkillId)
                    <label>Yetenek Başlığı</label>
                    @Html.TextBoxFor(x => x.Title, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x => x.Value, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            }
        </div>
    </div>
</div>
