@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>
                @Html.HiddenFor(x=> x.MessageId)
                <div class="form-group">
                    <h4>Konu:</h4>
                    <label class="form-control" disabled>@Model.Subject</label>
                </div>
                <div class="form-group">
                    <h4>Alıcı Mail:</h4>
                    <label class="form-control" disabled>@Model.Receiver</label>
                </div>
                <div class="form-group">
                    <h4>Gönderici Mail:</h4>
                    <label class="form-control" disabled>@Model.Sender</label>
                </div>
                <div class="form-group">
                    <h4>Alıcı İsim:</h4>
                    <label class="form-control" disabled>@Model.ReceiverName</label>
                </div>
                <div class="form-group">
                    <h4>Gönderici İsim:</h4>
                    <label class="form-control" disabled>@Model.SenderName</label>
                </div>
                <div class="form-group">
                    <h4>Mesaj İçeriği:</h4>
                    <label class="form-control" disabled>@Model.Content</label>
                </div>
                <a href="/Message/SenderMessage" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
</div>


