@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Tablosu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Url</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SocialMediaId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Url</td>
                                    <td>
                                        <a href="/SocialMedia/SocialMediaDelete/@item.SocialMediaId" class="btn btn-outline-warning">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/SocialMedia/SocialMediaEdit/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <a href="/SocialMedia/SocialMediaAdd" class="btn btn-primary">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
</div>


