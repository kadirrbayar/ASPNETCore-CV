@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "SocialMediaAdd";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Ekleme Paneli</h4>
            @using (Html.BeginForm("SocialMediaAdd", "SocialMedia", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Sosyal Medya Adı:</label>
                    @Html.TextBoxFor(x => x.Name, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>URL:</label>
                    @Html.TextBoxFor(x => x.Url, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Ikon URL:</label>
                    @Html.TextBoxFor(x => x.Icon, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a href="/socialmedia/index" class="btn btn-dark">İptal</a>
            }
        </div>
    </div>
</div>


