@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "ServiceEdit";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Paneli</h4>
            @using (Html.BeginForm("ServiceEdit", "Service", FormMethod.Post))
            {
                @Html.HiddenFor(x=> x.ServiceId)
                <div class="form-group">
                    <label>Deneyim Başlığı</label>
                    @Html.TextBoxFor(x => x.Title, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Image Url</label>
                    @Html.TextBoxFor(x => x.ImageURL, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            }
        </div>
    </div>
</div>