@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Detay Paneli</h4>
            @using (Html.BeginForm("EditAnnouncement", "Announcement", FormMethod.Post))
            {
                @Html.HiddenFor(x=> x.Id)
                <div class="form-group">
                    <label>Duyuru Başlığı</label>
                    @Html.TextBoxFor(x => x.Title, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x => x.Type, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Content, 6,3, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Announcement/Index" class="btn btn-dark">İptal</a>
            }
        </div>
    </div>
</div>

