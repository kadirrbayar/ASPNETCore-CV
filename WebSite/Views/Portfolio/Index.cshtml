@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projeler Tablosu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Proje</th>
                                <th>Ücret</th>
                                <th>Proje URL</th>
                                <th>Tamamlanma Oranı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.ProjectUrl</td>
                                    <td>@item.Value</td>
                                    <td>
                                        <a href="/Portfolio/PortfolioDelete/@item.PortfolioId" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Portfolio/PortfolioEdit/@item.PortfolioId" class="btn btn-outline-success">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <a href="/Portfolio/PortfolioAdd" class="btn btn-primary">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
</div>

