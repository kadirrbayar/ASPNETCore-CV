<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <div class="form-group my-2">
            <label for="name" class="form-label fw-bolder">Adınız</label>
            <input class="form-control" type="text" id="Name">
        </div>
        <div class="form-group my-2">
            <label for="email" class="form-label fw-bolder">Mail Adresiniz</label>
            <input class="form-control" type="email" id="Mail">
        </div>
        <div class="form-group my-2">
            <label for="message" class="form-label fw-bolder">Mesajınız</label>
            <textarea class="form-control" style="resize: none;" id="Content" rows="4"></textarea>
        </div>
        <button class="btn btn-primary mt-2" type="submit" id="addsendmessage">Gönder</button>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $("#addsendmessage").click(function () {
        let name = $("#Name").val();
        let mail = $("#Mail").val();
        let content = $("#Content").val();
        if (!name || !mail || !content) {
            alert("Tüm alanları doldurmalısınız!");
        } else {
            let values = {
                Name: name,
                Mail: mail,
                Content: content
            };
            $.ajax({
                type: "post",
                url: "/SendMessage/MessageAdd/",
                data: values,
                success: function (r) {
                    let result = JSON.parse(r);
                    alert("Mesajınız bize ulaşmıştır. Teşekkür Ederiz :)");
                    $("#Name").val("");
                    $("#Mail").val("");
                    $("#Content").val("");
                }
            });
        }
    });
</script>

