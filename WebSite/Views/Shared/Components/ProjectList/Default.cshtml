@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 5 Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Proje Görseli</th>
                                <th>Proje</th>
                                <th>Proje Url</th>
                                <th>Fiyat</th>
                                <th>Tamamlanma Oranı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Take(5))
                            {
                                <tr>
                                    <td>@item.PortfolioId</td>
                                    <td><img src="@item.ImageURL" alt="image" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.ProjectUrl</td>
                                    <td>@item.Price</td>
                                    <td>@item.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
