@using EntityLayer.Concrete
@model List<Portfolio>
<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Çalışmalarım </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>

            <div class="grid-item">
                @foreach (var item in Model)
                {
                <a href="@item.ProjectUrl">
                    <figure class="portfolio-item">
                        <img src="@item.ImageURL" data-bp="@item.ImageURL2" />
                        <figcaption>
                            <h4 class="h5 mb-0">@item.Name</h4>
                            <div>@item.ProjectUrl</div>
                        </figcaption>
                    </figure>
                </a>
                }
            </div>
        </div>
    </div>
</div>
