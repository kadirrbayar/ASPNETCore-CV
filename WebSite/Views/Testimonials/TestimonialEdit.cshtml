@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "TestimonialEdit";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Düzenleme Paneli</h4>
            @using (Html.BeginForm("TestimonialEdit", "Testimonial", FormMethod.Post))
            {
                @Html.HiddenFor(x=> x.TestimonialId)
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.ClientName, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    @Html.TextBoxFor(x => x.Company, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Image Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    @Html.TextAreaFor(x => x.Comment, 6,3, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Testimonials/Index" class="btn btn-dark">İptal</a>
            }
        </div>
    </div>
</div>

