
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Testimonial>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslar Paneli</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad</th>
                                <th>Şirket</th>
                                <th>Yorum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td>@item.ClientName</td>
                                    <td>@item.Company</td>
                                    <td>@item.Comment.Substring(0,Math.Min(item.Comment.Length,20))...</td>
                                    <td>
                                        <a href="/Testimonials/TestimonialDelete/@item.TestimonialId" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Testimonials/TestimonialDetails/@item.TestimonialId" class="btn btn-outline-success">Yorumu Gör</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

