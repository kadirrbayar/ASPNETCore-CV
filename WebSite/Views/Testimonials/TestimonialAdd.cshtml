@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "TestimonialAdd";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Ekleme Paneli</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Ad:</label>
                    <input type="text" asp-for="ClientName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Şirket:</label>
                    <input type="text" asp-for="Company" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Image URL:</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Yorum:</label>
                    @Html.TextAreaFor(x=> x.Comment, 6,3, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

