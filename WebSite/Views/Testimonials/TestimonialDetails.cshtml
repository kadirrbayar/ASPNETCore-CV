@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "TestimonialDetails";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Detayları</h4>
                @Html.HiddenFor(x=> x.TestimonialId)
                <div class="form-group">
                    <h4>Ad:</h4>
                    <label class="form-control">@Model.ClientName</label>
                </div>
                <div class="form-group">
                    <h4>Şirket:</h4>
                    <label class="form-control">@Model.Company</label>
                </div>
                <div class="form-group">
                    <h4>Görsel URL:</h4>
                    <label class="form-control">@Model.ImageUrl</label>
                </div>
                <div class="form-group">
                    <h4>Yorum:</h4>
                    <label class="form-control">@Model.Comment</label>
                </div>
                <a href="/Testimonials/Index" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
</div>


