@model EntityLayer.Concrete.Feature

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Başlık Düzenleme Paneli</h4>
            @using (Html.BeginForm("Index", "Header", FormMethod.Post))
            {
                @Html.HiddenFor(x=> x.FeatureId)
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Header, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Ad-Soyad</label>
                    @Html.TextBoxFor(x => x.Name, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Title,10,2, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/adminpanel/index" class="btn btn-dark">İptal</a>
            }
        </div>
    </div>
</div>
