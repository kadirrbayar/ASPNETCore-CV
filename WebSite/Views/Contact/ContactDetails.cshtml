@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>
                @Html.HiddenFor(x=> x.MessageId)
                <div class="form-group">
                    <div class="form-group">
                        <h4>Gönderen Adı:</h4>
                        <label>@Model.Name</label>
                    </div>
                    <div class="form-group">
                        <h4>Gönderen Mail:</h4>
                        <label>@Model.Mail</label>
                    </div>
                    <div class="form-group">
                        <h4>Tarih:</h4>
                        <label>@Model.Date</label>
                    </div>
                    <div class="form-group">
                        <h4>Mesaj İçeriği:</h4>
                        <label>@Model.Content</label>
                    </div>
                </div>
                <a href="/contact/index" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
</div>

