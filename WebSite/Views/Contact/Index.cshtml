@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim - Gelen Kutusu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İsim</th>
                                <th>Mail</th>
                                <th>Tarih</th>
                                <th>İçerik</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MessageId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@item.Content.Substring(0, Math.Min(item.Content.Length, 8))...</td>
                                    <td>
                                        <a href="/Contact/ContactDelete/@item.MessageId" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Contact/ContactDetails/@item.MessageId" class="btn btn-outline-warning">Mesajı Gör</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



