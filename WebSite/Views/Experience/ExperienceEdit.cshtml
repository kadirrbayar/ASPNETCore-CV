@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "ExperienceEdit";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Düzenleme Paneli</h4>
            @using (Html.BeginForm("ExperienceEdit", "Experience", FormMethod.Post))
            {
                @Html.HiddenFor(x=> x.ExperienceId)
                <div class="form-group">
                    <label>Deneyim Başlığı</label>
                    @Html.TextBoxFor(x => x.Name, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Image Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new {@class="form-control", @required="required"})
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description,6,3, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Experience/Index" class="btn btn-dark">İptal</a>
            }
        </div>
    </div>
</div>

