
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Experience>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyimler Tablosu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceId</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td>
                                    <a href="/Experience/ExperienceDelete/@item.ExperienceId" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Experience/ExperienceEdit/@item.ExperienceId" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <br />
                <a href="/Experience/ExperienceAdd" class="btn btn-primary">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
</div>
