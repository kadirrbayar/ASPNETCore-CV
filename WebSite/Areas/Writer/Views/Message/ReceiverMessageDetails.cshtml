@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>
                @Html.HiddenFor(x=> x.MessageId)
                <div class="form-group">
                    <div class="form-group">
                        <h4>Konu:</h4>
                        <label>@Model.Subject</label>
                    </div>
                    <div class="form-group">
                        <h4>Alıcı Mail:</h4>
                        <label>@Model.Receiver</label>
                    </div>
                    <div class = "form-group">
                        <h4>Alıcı İsim:</h4>
                        <label>@Model.ReceiverName</label>
                    </div>
                    <div class="form-group">
                        <h4>Mesaj İçeriği:</h4>
                        <label>@Model.Content</label>
                    </div>
                </div>
                <a href="/Writer/Message/SenderMessage" class="btn btn-dark">İptal</a>
            </div>
        </div>
    </div>
</div>

