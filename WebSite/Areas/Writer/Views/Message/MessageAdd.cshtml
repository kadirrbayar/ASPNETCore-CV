@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Gönderme Paneli</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Alıcı Mail:</label>
                    <input type="text" name="Receiver" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Mesaj Konusu:</label>
                    <input type="text" name="Subject" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Mesaj İçeriği:</label>
                    @Html.TextAreaFor(x=> x.Content, 6,2, new {@class="form-control", @required="required"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

